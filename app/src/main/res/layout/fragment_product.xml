<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#088A4B"
    tools:context=".ProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


        <ImageView
            android:id="@+id/imageViewProductImageIndividual"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="59dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewProductNameIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-240dp"
            android:layout_marginBottom="-20dp"
            android:text="Bananas"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewProductPriceIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-175dp"
            android:layout_marginBottom="-60dp"
            android:text="2,40€"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProductDescriptionIndividual"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="-140dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="-45dp"
            android:text="Descrição"
            android:textAlignment="center"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/botaoAddCart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="-10dp"
            android:background="#A0A2A3"
            android:contentDescription="cartIcon"
            android:src="@drawable/ic_cart_add" />


    </LinearLayout>

</FrameLayout>