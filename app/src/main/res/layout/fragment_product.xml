<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#088A4B"
    tools:context=".ProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


        <ImageView
            android:id="@+id/imageViewProductImageIndividual"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="70dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewProductNameIndividual"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="-210dp"
            android:layout_marginBottom="-60dp"
            android:text=""
            android:textAlignment="inherit"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewProductPriceBefore"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-38dp"
            android:text=""
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewProductPriceIndividual"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-1dp"
            android:layout_marginBottom="-38dp"
            android:text=""
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProductDescriptionIndividual"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="-275dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="-50dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp" />




    </LinearLayout>

    <ImageButton
        android:id="@+id/botaoAddCart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/ic_cart_add"
        android:background="@drawable/button_circle"
        android:contentDescription="cartIcon" />

</FrameLayout>